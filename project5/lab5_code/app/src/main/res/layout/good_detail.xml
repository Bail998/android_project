<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.joey.lab5_code.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/second">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a genius"
            app:layout_constraintTop_toTopOf="@+id/second"
            app:layout_constraintBottom_toBottomOf="@+id/second"
            app:layout_constraintRight_toRightOf="@+id/second"
            app:layout_constraintLeft_toLeftOf="@+id/second"/>


    </android.support.constraint.ConstraintLayout>


</LinearLayout>